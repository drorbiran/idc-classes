<% include ../partials/header.ejs %>


    <div class="row">
        <h1 style="text-align: center;">Add a New Comment to <%= course.name %></h1>
        <div style="width: 30%; margin: 48px auto;">
            <form action="/courses/<%= course._id %>/comments" method="post">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" placeholder="text"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-deafulat btn-primary btn-block">Add</button>
                </div>
            </form>
            <a href="/courses">Back</a>
        </div>
    </div>




